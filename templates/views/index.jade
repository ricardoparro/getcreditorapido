extends ../layouts/default

block content
	section#fixed
		.wrapper
			h2 Faça aqui a sua simulação
			form(action='', method='post')
				ul.clearfix
					li
						label=data.post.valueLoanLabel
						input.text(type='text')
					li
						label=data.post.numberOfMoths
						input.text(type='text')
					li
						label=data.post.emailLabel
						input.text(type='email')
					li
						label.empty .
						input.submit(type='submit', value=data.post.callToActionLabel)
	header#quotation(name='quotation', itemscope='', itemtype='http://schema.org/Product')
		.wrapper
			.logo
				h1 Get
				p= data.post.tagline
			aside
				h2= data.post.heading
				form(action='', method='post')
					ul
						li
							label=data.post.valueLoanLabel
							input.text(type='text')
						li
							label=data.post.numberOfMoths
							input.text(type='text')
						li
							label=data.post.emailLabel
							input.text(type='email')
						li
							input.submit(type='submit', value=data.post.callToActionLabel)

	main
		section#partners
			.wrapper.clearfix
				h2=data.post.headingParceiros
				.swiper-container
					ul#slides.swiper-wrapper
						each par, par_i in data.post.partners
							li.swiper-slide
								img(src= par.image.secure_url , alt= par.name)
						
		section#opinions
			.wrapper
				h2.desktop=data.post.headingOpinions
				h2.mobile
					| Opiniões
					br
					| Sobre a Get
				.ghost .
				.swiper-container.clearfix
					ul#slides.swiper-wrapper.clearfix
						each test, test_i in data.post.testimonials
							li.swiper-slide(itemprop='review', itemscope='', itemtype='http://schema.org/Review')
								ul.outer.clearfix
									li(itemprop='reviewRating', itemscope='', itemtype='http://schema.org/Rating')
										ul.inner.clearfix
											- for(var i = 0; i < test.numberOfStars; ++i){
												- if(i+1 == test.numberOfStars){
													li(itemprop='ratingValue')=i+1
												-}
												- else{
													li=i+1
												- }
											- }
											meta(itemprop='worstRating', content='1')
											meta(itemprop='bestRating', content=test.numberOfStars)
									li(itemprop='author')
										h4=test.name
									li(itemprop='contentLocation')
										h5=test.location
									li(itemprop='description')
										p=test.testimony
				.media(itemprop='aggregateRating', itemscope='', itemtype='http://schema.org/AggregateRating')
					| Média de
					span(itemprop='ratingValue') 4.5
						| estrelas num total de
					span(itemprop='reviewCount') 22
						| opiniões.
			a#cta.ancora(href='#quotation')
				.inner Ver Cotações
